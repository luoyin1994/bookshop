@import "variables"

@font-face
  font-family 'icon-reader'
  src url(icomoon-font-path + '/icon-reader.eot?kbo2qk')
  src url(icomoon-font-path + '/icon-reader.eot?kbo2qk#iefix') format('embedded-opentype'), url(icomoon-font-path + '/icon-reader.ttf?kbo2qk') format('truetype'), url(icomoon-font-path + '/icon-reader.woff?kbo2qk') format('woff'), url(icomoon-font-path + '/icon-reader.svg?kbo2qk#icon-reader') format('svg')
  font-weight normal
  font-style normal

.icon
  font-family 'icon-reader' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-more
  &:before
    content icon-more
.icon-back
  &:before
    content icon-back
.icon-sun
  &:before
    content icon-sun
.icon-moon
  &:before
    content icon-moon
.icon-catalog
  &:before
    content icon-catalog
.icon-download
  &:before
    content icon-download

