.folder
  padding 0 4% 1%
  h3
    font 16px / 2.2 a
    color #7b7b7b
    font-weight 200
    text-indent 0.3em
    border-bottom 1px solid #dddddd
  .tags-list
    margin 0.7em 0
    .tag
      border 1px solid #7b7b7b
      border-radius 2px
      padding 0.2em 0.5em
      margin-left 0.5em
      font 14px / 1 a
      display inline-block
      &:first-child
        margin-left 0
  .imgs-list
    row-nums = 3
    .item
      width (100% /row-nums)
      display inline-block
      .img
        border 1px solid #f0f0f0
        width 80px
        height 1.3 * @width
        margin 0 auto
        img
          width 100%
          height 100%
        .boot-title
          font 12px / 2 a
          text-align center


