.book-detial
  margin 3% 0 0
  .main-card
    margin 0 3%
    .book
      margin 6% 0
      .book-cover
        display inline-block
        width 40%
        .book-img
          margin 0 auto
          border 1px solid #d9d9d9
          width 100px
          height 1.3 *@width
          box-shadow 0 2px 8px #dbdbdb
          img
            width 100%
            height 100%
      .book-info
        box-sizing border-box
        padding-left 2%
        width 60%
        vertical-align top
        display inline-block
        .title
          font 18px / 2.2 a
          color #8e8e8e
        .authors
          .author
            font 15px / 2 a
            color #7e8bff
        .grade
          .read
            font 13px / 1.5 a
            color #cbcaca
        .price
          font 14px / 1.6 a
          color #aaaaaa
        .count
          font 14px / 1.7 a
          color #919191
          .bookTag
            margin-left 0.3em
            font 12px / 1 a
            color #7bcc95
            border 1px solid
            padding 2px
            border-radius 2px
    .book-dash
      .btn-group
        text-align center
        font 16px / 2.2 a
        .btn
          border-radius 5px
          border 1px solid #e6e6e6
          &.btn1
            width 100%
          &.orange
            background-color #ff602b
          .book-dash-text
            color #ffff
            letter-spacing 0.1em
    .book-folder
      .content
        margin 0.5em 0
        font 14px / 1.5 a
        color #515151
        text-indent 2em
      .tail
        text-align center
        font 14px / 2.2 a
        border-top 1px solid #f0f0f0
        color #2e2e2e


