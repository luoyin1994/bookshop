section.channel-recommend
  .channel-recommend--header
    h2.channel-recommend--header-title 重磅推荐
    .channel-recommend--header-change
      a.item.channel-recommend--header-change-male(href='javascript:')
      span.item.line-v
      a.item.channel-recommend--header-change-female.select(href='javascript:')
  ul.list
    li.book(v-for='(item,index) in data.recommend.data' v-if='index === 0')
      .book--cover
        span.book--img-order
        a(:href='"/book?id=" + item.fiction_id')
          img(:src='item.cover')
        p.book--cover-finish
      .book--info
        p.book-title {{item.title}}
        p.book-author {{item.authors}}
        p.book-summary {{item.summary}}
        .book--tap
          .book--tap-item(v-for='(tag,index) in item.tags' v-if='index < bookTagLimitNum') {{tag}}
    li.book.book--no-img(v-for='(item,index) in data.recommend.data' v-if='index > 0 && index < bookLimitNum')
      span.book--no-img-order 0{{index - 1 + 2}}
      .book--no-img-info
        a(:href='"/book?id=" + item.fiction_id')
          span.book--no-img-info-title {{item.title}}
        span.book--no-img-info-author {{item.authors}}

