#header
  tab-item-sum = 4
  font-size 16px
  height 3rem
  text-align center
  background-color #f6f6f6
  border-bottom 1px solid #eaeaea
  line-height @height
  .header-tab
    .item
      display inline-block
      width (100% / tab-item-sum)
      font-size 14px
      vertical-align baseline
      .icon
        vertical-align middle
        color #ababab
        display inline-block
        &.icon-user
          font-size 17px
          margin-top -2px
        &.icon-search
          font-size 15px
          margin-top 0
      &.header-check.icon-check
        color #ff4e35
        cursor pointer
      a
        margin-top = 2px
        position relative
        display block
        color #686868
        margin-top margin-top
        /*防止点击a标签在某些浏览器出现高亮效果*/
        //-webkit-tap-highlight-color rgba(0,0,0,0)
        &.select
          color #ff5027
          &:after
            content ''
            position absolute
            font-size 16px
            width 3em
            margin-left -2.5em
            border-bottom 2px solid #cccccc
            bottom (margin-top - 1px)
            border-radius 2px

