.channel-recommend
  border-bottom 10px solid #f5f5f5
  .channel-recommend--header
    height 3em
    line-height 3
    border-bottom 1px solid #cccccc
    .channel-recommend--header-title
      font-size 16px
      font-weight 400
      float left
      padding-left 4%
      &:after
        content '推'
        display inline-block
        vertical-align 3px
        font 12px / 1 a
        padding 0.05em 0.5em
        margin-left 0.4em
        color #ffffff
        background-color #7bcc95
        border-radius 1px
    .channel-recommend--header-change
      margin-right 20px
      float right
      .item
        margin-right 8px
        &.line-v
          width 0
          height 0.8em
          vertical-align middle
          margin-top -0.1em
          border-left 1px solid
        &.channel-recommend--header-change-male
          &:before
            content '男'
          &.select:before, &:hover:before
            color #8e88fa !important
        &.channel-recommend--header-change-female
          &:before
            content '女'
          &.select:before, &:hover:before
            color #ff35a7 !important

  .list
    .book
      padding 4% 0
      margin 0 5.2%
      border-bottom 1px solid rgba(204, 204, 204, 0.79)
      book-cover-width = 80px
      .book--cover, .book--info
        display inline-block
      .book--cover
        position relative
        width book-cover-width
        height 1.3 *book-cover-width
        cursor pointer
        border-radius 1px
        .book--img-order
          position absolute
          top 0
          left 3px
          height 0
          width 0
          border-style solid
          border-width 11px 5px 5px
          border-color #e03e1b
          border-bottom-color transparent
          &:before
            position absolute
            content '1'
            bottom  0
            right 0
            color #ffffff
            font-size 16px !important
            transform translateY(28%) translateX(46%) scale(0.5)
            text-align center
            font-weight 200
        img
          border 1px solid #cccccc
          width 100%
          height 100%
        .book--cover-finish, .book--cover-unfinish
        //- 加一个渐变半透明的背景让定位在图片上的文字更加清晰
          background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.4))
          position absolute
          bottom 0.3em
          left 0.5em
          font 12px / 1 a
          color #ffffff
        .book--cover-finish
          &:after
            content '完结'
        .book--cover-unfinish
          &:after
            content '未完结'
      .book--info
        margin-left 22px
        vertical-align top
        height 1.3 *book-cover-width
        box-sizing border-box
        width 61%
        p
          line-height 1.6
        .book-title
          font-size 16px
          color rgba(0, 0, 0, 0.9)
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
        .book-author
          font-size 13px
          color rgba(0, 0, 0, 0.8)
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
        .book-summary
          height 1.2 * 2em
          font 12px / 1.2 a
          color rgba(0, 0, 0, 0.5)
          overflow hidden
          text-overflow ellipsis
          /*多行文字溢出*/
          display -webkit-box
          -webkit-line-clamp 2 //显示多少行
          -webkit-box-orient vertical
        .book--tap
          color #53ac75
          margin-top 10px
          white-space nowrap
          .book--tap-item
            font 10px / 1.3 a
            max-width 4em //超过6字不显示
            padding 0.2em 0.4em 0.3em
            margin-right 0.6em
            text-align center
            border 1px solid
            border-radius 5px
            display inline-block
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            &:last-child
              margin-right 0
      &.book--no-img
        height = 16px
        height height
        line-height @height
        &:last-child
          border none
        .book--no-img-order
          font-size 12px
          color #e03e1b
          vertical-align top
        .book--no-img-info
          display inline-block
          margin-left 1em
        .book--no-img-info-author
          font-size 13px
          font-weight 400
          margin-left 1em
          color rgba(0, 0, 0, 0.4)
  .channel-recommend--footer-next
    border-top 1px solid rgba(204, 204, 204, 0.79)
    overflow hidden
    .item
      display inline-block
      width 50%
      text-align center
      font 13px / 3 a
      color rgba(0,0,0,0.9)
      border-right 1px solid #ccc
      &:first-child
        margin-left -1px
      &:last-child
        border none
      &.channel-recommend--footer-next-channel
        &:after
          content ' >>'
