section.shelf
  //header
  //  a.shelf--search(href='/search')
  //    i.icon.icon-search
  //    span 输入书名/作者/关键字
  ul.shelf--book-list
    li.book(v-for='(item,index) in data.recommend.data' v-if='index < 9 && index > 2')
      .book--cover
        .book-cover
          a(href='/reader')
            img(:src='item.cover')
          //-a(:href='"/book?id=" + item.fiction_id')
          p.book--cover-finish {{(item.finish)?"完结":"未完结"}}
      .book--info
        p.book-title {{item.title}}
        p.book-author {{item.authors}}
        p.book-summary {{item.summary}}
        .book--tap
          .book--tap-item(v-for='(tag,index) in item.tags' v-if='index < bookTagLimitNum') {{tag}}