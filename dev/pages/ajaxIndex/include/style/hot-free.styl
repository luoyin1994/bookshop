.channel-hot
  border-bottom 10px solid #f5f5f5
  .channel-hot--header
    border-left 6px solid #ff564f
    .channel-hot--header-title
      font-weight 400
      border-bottom 1px solid rgba(204, 204, 204, 0.69)
      padding-left 1em
      font 16px / 2.6 a
  .book-table
    margin 15px auto 0
    nums-of-row = 3
    li
      display inline-block
      width (100% / nums-of-row)
      margin-bottom 15px
      .book
        book-width = 80px
        width book-width
        margin 0 auto
        .book-cover
          height 1.3*book-width
          position relative
          background-color #eeece9
          box-shadow 0px 6px  5px -3px #aaa
          border 1px solid #f0f0f0
          overflow hidden
          img
            width 100%
            height 100%
        .book-title
          width 80px
          margin 5px auto 0
          font 13px / 1.5 a
          text-align center
          color #5f5f5f
          height 2.8em
          overflow hidden
          font-weight 400
  .chanel-hot--footer
    border-top 1px solid #f0f0f0
    text-align center
    line-height 3
    display block
    height @line-height em
    font-size 13px
    &:after
      content ' >>'