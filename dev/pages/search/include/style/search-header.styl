.header-search
  background = #ff7934
  search-height = 35px
  header-padding-v = 5px
  header-height = search-height + 2 * header-padding-v
  background-color background
  padding header-padding-v 0 6px
  line-height search-height
  .search
    height search-height
    color #cccccc
    .search-home
      color #fbfbfb;
      width 15%
      text-align center
      transform scale(1.3) translateY(2px)
      cursor pointer
    .search-box
      display inline-block
      width 67%
      height 100%
      position relative
      .icon-search
        position absolute
        top 50%
        transform translateY(-50%)
        margin-top -1px
        left 0.5em
        width 20px
        height 1em
        vertical-align -1px
      input
        border none
        outline none
        border-radius 3px
        box-sizing border-box
        width 100%
        height 100%
        padding-left 2.2em
        padding-right 1em
        display inline-block
        font-size 14px
    .search-botton
      cursor pointer
      color #f0f0f0
      vertical-align middle
      display inline-block
      height 100%
      width 18%
      text-align center
