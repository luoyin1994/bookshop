.search--content
  transition 1s
  margin 0 5.2%
  .search--book-list
    .book
      padding 4% 0
      border-bottom 1px solid rgba(204, 204, 204, 0.79)
      book-cover-width = 80px
      &:last-child
        border none
      .book--cover, .book--info
        display inline-block
      .book--cover
        position relative
        width book-cover-width
        height 1.3 *book-cover-width
        cursor pointer
        border-radius 1px
        img
          border 1px solid #cccccc
          width 100%
          height 100%
        .book--cover-finish
          position absolute
          bottom 0.3em
          left 0.5em
          font 12px / 1 a
          color #ffffff
          background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.4))
      .book--info
        margin-left 22px
        vertical-align top
        height 1.3 *book-cover-width
        box-sizing border-box
        width 61%
        p
          line-height 1.6
        .book-title
          font-size 19px
          color rgba(0, 0, 0, 0.9)
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
        .book-author
          font-size 16px
          color rgba(0, 0, 0, 0.8)
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
        .book-summary
          margin-top 0.3em
          font 12px / 1.3 a
          color rgba(0, 0, 0, 0.5)
          overflow hidden
          text-overflow ellipsis
          /*多行文字溢出*/
          display -webkit-box
          -webkit-line-clamp 3 //显示多少行
          -webkit-box-orient vertical
        .book--tap
          color #53ac75
          margin-top 10px
          white-space nowrap
          .book--tap-item
            font 10px / 1.3 a
            max-width 4em //超过6字不显示
            padding 0.2em 0.4em 0.3em
            margin-right 0.6em
            text-align center
            border 1px solid
            border-radius 5px
            display inline-block
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            &:last-child
              margin-right 0






