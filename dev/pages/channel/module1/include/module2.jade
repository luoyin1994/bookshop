
section.channel-module(style='height:100%;margin-top:1%')
  ul.list
    each item,index in  data.items
      - if(typeof max === 'undefined') max = {item:10,tag:3}
      if (typeof item !== 'undefined' && index < max.item)
        li.book(class='#{channel}')
          .book--cover
            a(href='/book?id=#{item.fiction_id}').book-cover
              img(src='#{item.cover}')
              p.book--cover-finish #{(item.finish)?"完结":"未完结"}
          .book--info
            p.book-title #{item.title}
            p.book-author #{item.authors}
            p.book-summary #{item.summary}
            .book--tap
              each tag,index in item.tags
                //- 控制显示标签个数
                if index < max.tag
                  .book--tap-item #{tag}

