each preItem,preIndex in data.items
  if (typeof preItem.data.data[0].cover) !== 'undefined'
    section.channel-module
      .channel-module--header(class='#{channel}')
        h2.channel-module--header-title(class='#{channel}') #{preItem.ad_name}
      ul.list
        each item,index in  preItem.data.data
          if index < 4
            li.book(class='#{channel}')
              .book--cover
                a(href='/book?id=#{item.fiction_id}').book-cover
                  img(src='#{item.cover}')
                  p.book--cover-finish #{(item.finish)?"完结":"未完结"}
              .book--info
                p.book-title #{item.title}
                p.book-author #{item.authors}
                p.book-summary #{item.summary}
                .book--tap
                  each tag,index in item.tags
                    //- 控制显示标签个数
                    if index < max.tag
                      .book--tap-item #{tag}
      a.chanel-module--footer(href='/subchannel?channel=#{data.ad_setting_name.replace("H5-","")}&id=#{preItem.reference_id}')  查看更多

